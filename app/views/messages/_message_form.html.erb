
  <%=form_for message, remote: true,authenticity_token: true do |f|%>
  <p class="emoji-picker-container">
    <%= f.text_area :content, data: {textarea: "message", emojiable: true } %>
    <!-- this hidden field is for the MessagesController and
     Action Cable to keep track of what chat this message belongs to -->
     <%= f.submit 'Send' %>
</p>


<%= f.hidden_field :chat_id, value: chat.id %>


  <%end%>
