<!DOCTYPE html>
<html>
  <head>
    <title>ChatApp</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if current_user %>  
      <%= render 'layouts/navbar' %>
    <% end %>

   <% if flash[:notice] %>
       <div class="flash-notice"><%= flash[:notice] %></div>
     <% elsif flash[:alert] %>
       <div class="flash-alert"><%= flash[:alert] %></div>
   <% end %>
    <%= yield %>
  </body>
</html>
