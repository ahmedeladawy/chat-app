<div id="wrapper" style="margin-top: 50px;">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                  <div>

                    <a href="#">
                      Inbox
                    </a>
                  </div>
                </li>
								<ul>
									<% if @existing_chats_users %>
									  <% @existing_chats_users.each do |other_user| %>
									  	<% if other_user != current_user %>
										    <li>
										      <%= link_to(user_chats_path(current_user, :other_user => other_user.id), method: :post) do %>
												<div>
													<span class='img-inbox'>
                            <%= image_tag other_user.image %>
                          </span>
													<%= other_user.first_name %>
												</div>
										      <% end %>
										    </li>
									    <% end %>
									  <% end %>
								  <% end %>
								</ul>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-lg-12">

                        <a href="#menu-toggle" id="menu-toggle">
                          <%= fa_icon("bullseye 2x")%> </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
     <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
